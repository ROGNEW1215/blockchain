{
  "name": "blockchain-predictive-maintenance",
  "version": "1.0.0",
  "description": "基于区块链的工业设备预测性维护系统",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd client && npm install",
    "build-client": "cd client && npm run build",
    "heroku-postbuild": "npm run install-client && npm run build-client"
  },
  "keywords": [
    "blockchain",
    "predictive-maintenance",
    "industrial-iot",
    "ethereum",
    "smart-contracts"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.17.3",
    "mongoose": "^6.2.9",
    "web3": "^1.7.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "multer": "^1.4.4",
    "jsonwebtoken": "^8.5.1",
    "bcryptjs": "^2.4.3",
    "socket.io": "^4.4.1",
    "csv-parser": "^3.0.0",
    "xlsx": "^0.18.5",
    "nodemailer": "^6.7.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.15",
    "concurrently": "^7.1.0"
  }
}